@model IEnumerable<ForumSystem.Web.ViewModels.Feedback.FeedbackDisplayViewModel>
@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.AuthorId != null)
            {
                <tr>
                    <td>@item.Author.UserName</td>
                    <td>@item.Title</td>
                    <td>@item.Content</td>
                    <td>@item.CreatedOn</td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="row text-center">
    <ul class="pagination pagination-sm">
        <li class="disabled"><a href="#">«</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">»</a></li>
    </ul>
</div>