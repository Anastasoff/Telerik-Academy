@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Calculator</h2>
            <form class="form-horizontal" action="/Home/Sum" method="post">
                <div class="row">
                    <div class="form-group">
                        <label for="firstNumber">First number:</label>
                        <input id="firstNumber" type="text" name="firstNumber" />
                    </div>
                    <div class="form-group">
                        <label for="secondNumber">Second number:</label>
                        <input id="secondNumber" type="text" name="secondNumber" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-default" type="submit" value="Calculate" />
                    </div>
                </div>
                <div class="row">
                    <label>Result:</label>
                    <span>@ViewBag.Result</span>
                </div>
            </form>
        </div>
    </div>
</div>