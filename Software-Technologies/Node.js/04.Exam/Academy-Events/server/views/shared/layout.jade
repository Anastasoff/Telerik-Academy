doctype
html
    head
        title
            | Telerik Academy Events
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav.navbar-default
            .container
                .navbar-header
                    a.navbar-brand(href="/")
                        | Telerik Academy Events
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/") Home
                        if !currentUser
                            li
                                a(href="/register") Register
                            li
                                a(href="/login") Login
                        else
                            li
                                a(href="/active") Active events
                            li
                                a(href="/past") Past events
                            li
                                a(href="/create") Create events
                            li
                                a(href="/profile") Hi, #{currentUser.username}!
                            li
                                a(href="/logout") Logout

        .container
            br
            if errorMessage
                .alert.alert-danger(role="alert") #{errorMessage}
            .jumbotron
                block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2014

        include scripts
        block page-scripts